<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Center Name"
        android:padding="3dp"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:drawableLeft="@drawable/ic_hospital"
        android:drawablePadding="4dp"
        android:id="@+id/idTVcenterName"
/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Center Location"
        android:id="@+id/idTVcenterLocation"
        android:layout_below="@id/idTVcenterName"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_location"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Center Timings"
        android:id="@+id/idTVcenterTimings"
        android:layout_below="@id/idTVcenterLocation"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_timings"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_timings"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/idLL"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_below="@id/idTVcenterTimings"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="vaccine name"
            android:drawableLeft="@drawable/ic_vaccine"
            android:drawablePadding="3dp"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:id="@+id/idTVVaccineName"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fees"
            android:id="@+id/idTVVaccineFees"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="3dp"
            />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_below="@id/idLL"
        android:weightSum="2"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Age Limit"
            android:id="@+id/idTVAgeLimit"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:padding="3dp"
            />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/idTVAvailability"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="availability"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/black"
            />



        
        
        
    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>